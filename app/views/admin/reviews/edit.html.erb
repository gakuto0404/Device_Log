<h4 class="col-md-6"><span>レビュー編集</span></h4>
<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class='col-md-8 mt-3'>
      <%= form_with model: @review, url: admin_review_path(@review) do |f| %>

        <!--商品画像-->
        <div class="form-group row">
          <%= f.label :image, "商品画像:", class: "col-md-3 col-form-label" %>
          <%= f.file_field :image, accept: "image/*", class: "col-md-6 mt-1" %>
        </div>

        <!--レビュー題名-->
        <div class="form-group row">
          <%= f.label :title, "レビュー題名:", class: "col-md-3 col-form-label" %>
          <%= f.text_field :title, :placeholder => "レビュー題名", class: "col-md-6 mt-1" %>
        </div>

        <!--商品名-->
        <div class="form-group row">
          <%= f.label :item_name, "商品名:", class: "col-md-3 col-form-label" %>
          <%= f.text_field :item_name, :placeholder => "商品名", class: "col-md-6 mt-1" %>
        </div>

        <!--ジャンル-->
        <div class="form-group row">
          <%= f.label :genre_id, "ジャンル:", class: "col-md-3 col-form-label" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "col-md-6 mt-1" %>
        </div>

        <!--メーカー名-->
        <div class="form-group row">
          <%= f.label :manufacture_name, "メーカー名:", class: "col-md-3 col-form-label" %>
          <%= f.text_field :manufacture_name, :placeholder => "メーカー名", class: "col-md-6 mt-1" %>
        </div>

        <!--購入価格-->
        <div class="form-group row">
          <%= f.label :purchase_price, "購入価格:", class: "col-md-3 col-form-label" %>
          <%= f.number_field :purchase_price, :placeholder => "00,000", class: "col-md-6 mt-1" %><div class="mt-2">円</div>
        </div>

        <!--購入場所-->
        <div class="form-group row">
          <%= f.label :purchase_source, "購入場所:", class: "col-md-3 col-form-label" %>
          <%= f.text_field :purchase_source, :placeholder => "購入場所", class: "col-md-6 mt-1" %>
        </div>

        <!--レビュー文-->
        <div class="form-group row">
          <%= f.label :impressions, "レビュー文:", class: "col-md-3 col-form-label" %>
          <%= f.text_area :impressions, :placeholder => "ここにレビュー文を記述します", size: "20x7", class: "col-md-9 mt-1" %>
        </div>

        <!--編集保存ボタン-->
        <div class="action ml-3">
          <%= f.submit "編集を保存", class: "button col-md-5 offset-md-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
