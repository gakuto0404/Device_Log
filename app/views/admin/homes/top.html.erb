<h4 class="col-md-6"><span>ユーザー一覧</span></h4>
<div class='col-md-12 mt-3'>
  <div class="text-center row">
  <% @users.each do |user| %>
    <div class="profile my-4 ml-4 mr-4">
      <%= link_to admin_user_path(user) do %>
        <%= image_tag user.profile_image, class: "admin_image" %>
      <% end %>
      <h5>
        <%= link_to admin_user_path(user) do %>
          <%= user.last_name %><%= user.first_name %>
        <% end %>
        User ID:<%= user.id %></br>
        <%= user.email %></br>
        <div class="text-right">
        <% if user.is_active == true %>  <!-- if文での会員ステータス表示 -->
          <td><font color=#00fa9a><strong>有効</strong></font></td>
        <% else %>
          <td><font color=#c0c0c0><strong>退会</strong></font></td>
        <% end %>
        </div>
      </h5>
    </div>
  <% end %>
  </div>
</div>
