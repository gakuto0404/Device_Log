<h4 class="col-md-6 mt-3"><span>ジャンル一覧・新規登録</span></h4>
<div class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <tr>
          <th class="col-md-6"><%= f.text_field :name, :placeholder => "例：　キーボード", class: "col-md-5" %></th>
          <th class="col-md-3"><%= f.submit '新規登録', class: "button offset-md-2 col-md-4" %></th>
        </tr>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 mt-5">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th>編集</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td align="center"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "button-edit" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>