<div class="search-form">
  <%= form_with(scope: :search, url: public_reviews_path, method: :get, local: true) do |f| %>
    <div class="comment mt-3">
      <h4 class="d-flex">ジャンル検索
        <%= link_to public_reviews_path do %>
          <div class="fa-solid fa-rotate-right", style="color:#00fa9a;"></div>
        <% end %>
      </h4>
      <div class="text-center">
        <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name, selected: @search_params[:genre_id], include_blank: t('helpers.select.include_blank')) %>
        <%= f.submit "検索", class: "button col-md-1" %>
      </div>
    </div>
  <% end %>
  <%= form_with(scope: :search, url: public_reviews_path, method: :get, local: true) do |f| %>
    <div class="search limegreen">
      <%= link_to public_reviews_path do %>
        <div class="fa-solid fa-rotate-right reload"></div>
      <% end %>
      <%= f.text_field :item_name, value: @search_params[:item_name], :placeholder => "  デバイス検索" %>
      <button type="submit"><i class="fa fa-search"></i></button>
    </div>
  <% end %>
</div>

<div style="text-align:center;">
  <%= image_tag 'マウス.jpg', class: "top-image"%>
  <%= image_tag 'マイク.jpg', class: "top-image"%>
  <%= image_tag 'キーボード.jpg', class: "top-image"%>
  <%= image_tag 'ヘッドセット.jpg', class: "top-image"%>
  <%= image_tag 'マウス2.jpg', class: "top-image"%>
</div>
<div class="container">
  <h4><span>新着レビュー(5件)</span></h4>
  <div class="row">
    <div class="col-md-12">
      <% @reviews.last(5).reverse_each do |review| %>
        <div class="d-flex flex-column flex-md-row align-items-center my-3">
          <%= link_to public_review_path(review.id) do %>
            <%= image_tag review.image, class: "item_img" %>
          <% end %>
          <div class="col-md-10">
            <h3>
              <div>
                <%= link_to public_review_path(review.id), class: "mr-5" do %>
                  <%= review.item_name %>
                <% end %>
                <%= review.genre.name %>
              </div>
              <div class="text-right">
                <%= review.user.nick_name %>のレビュー
              </div>
                <%= review.title %>
              <div class="text-right">
                購入価格￥<%= review.purchase_price.to_s(:delimited) %>
              </div>
            </h3>
          </div>
        </div>
        <div class="border"></div>
      <% end %>
    </div>
  </div>
</div>