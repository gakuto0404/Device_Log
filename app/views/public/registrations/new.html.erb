<div class="text-center">
  <div class="container">
    <div class="row">
      <div class="col">
        <section class="about-content">
          <h4 class="my-5"><strong>新規登録</strong></h4>
          <div class="col-md-12 mt-5">
            <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
              <%= render "public/shared/error_messages", resource: resource %>

              <!--ニックネーム-->
              <div class="form-group row">
                <%= f.label :nick_name, "ニックネーム", class: "col-md-4 offset-md-1 col-form-label" %>
                <%= f.email_field :nick_name, autocomplete: "nick_name", :placeholder => "みょうめい", class: "col-md-5" %>
              </div>

              <!--名前-->
              <div class="form-group row">
                <%= f.label "氏名", class: "col-md-4 offset-md-1 col-form-label" %>
                <%= f.text_field :last_name, :placeholder => "苗字", class: "col-md-2" %>
                <%= f.text_field :first_name, :placeholder => "名前", class: "col-md-2 offset-md-1" %>
              </div>

              <!--メールアドレス-->
              <div class="form-group row">
                <%= f.label :email, "メールアドレス", class: "col-md-4 offset-md-1 col-form-label" %>
                <%= f.email_field :email, autocomplete: "email", :placeholder => "sample@example.com", class: "col-md-5" %>
              </div>

             <!--パスワード-->
              <div class="form-group row">
                <%= f.label :password, "パスワード6文字以上", class: "col-md-4 offset-md-1 col-form-label" %>
                <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード", class: "col-md-5" %>
              </div>

              <!--パスワード（確認用）-->
              <div class="form-group row">
                <%= f.label :password_confirmation, "確認用パスワード", class: "col-md-4 offset-md-1 col-form-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード", class: "col-md-5" %>
              </div>

              <!--新規登録ボタン-->
              <div class="action ml-3">
                <%= f.submit "新規登録", class: "btn btn-action btn-success col-md-3 mt-3" %>
              </div>
              <%= render "public/shared/links" %>
            <% end %>
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
