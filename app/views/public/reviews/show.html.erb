<h3 class="mt-3"><strong><%= @review.title %></strong></h3>
<div class="row">
  <h3 class="mr-5">
    <%= image_tag @review.image, class: "show_item_image my-5" %></br>
    <th><strong>レビュー投稿者：</strong></th>
    <th><strong>
      <%= link_to public_user_path(@user) do %>
        <%= @review.user.nick_name %>
      <% end %>
    </strong></th>
  </h3>
  <div class="col-md-7 mt-4">
    <h3>
      <!--商品名-->
      <div class="form-group row">
        <label class="col-md-3"><strong>商品名:</strong></label>
        <td><%= @review.item_name %></td>
      </div>

      <!--ジャンル-->
      <div class="form-group row">
        <label class="col-md-3"><strong>ジャンル:</strong></label>
        <td><%= @review.genre.name %></td>
      </div>

      <!--メーカー名-->
      <div class="form-group row">
        <label class="col-md-3"><strong>メーカー名:</strong></label>
        <td><%= @review.manufacture_name %></td>
      </div>

      <!--購入価格-->
      <div class="form-group row">
        <label class="col-md-3"><strong>購入価格:</strong></label>
        <td>￥<%= @review.purchase_price.to_s(:delimited) %></td>
      </div>

      <!--購入場所-->
      <div class="form-group row">
        <label class="col-md-3"><strong>購入場所:</strong></label>
        <td><%= @review.purchase_source %></td>
      </div>
    </h3>

      <!--レビュー文-->
      <div class="form-group row">
        <h4><label><strong>レビュー:</strong></label></h4>
        <td><%= @review.impressions %></td>
      </div>

      <!--コメント欄-->
      <div class="form-group row">
        <h4><label><strong>コメント欄:</strong></label></h4>
        <div>
          <p>コメント件数：<%= @review.review_comments.count %></p>
          <% @review.review_comments.each do |review_comment| %>
            <p><%= image_tag review_comment.user.get_profile_image(100,100) %></p>
            <%= review_comment.user.nick_name %>
            <%= review_comment.created_at.strftime('%Y/%m/%d') %><%= review_comment.comment %>
            <% if review_comment == current_user %>
              <%= link_to "削除", admin_reviews_comment_path(review_comment.review_image, review_comment), method: :delete %>
            <% end %>
          <% end %>
        </div>
        <div>
          <%= form_with model:[@review, @review_comment], url: reviews_comment_path do |f| %>
            <%= f.text_area :comment, :size=>"60x3",placeholder: "コメントする" %>
            <%= f.submit "送信する", class: "btn btn-success mb-4" %>
          <% end %>
        </div>
      </div>

    <% if @review.user == current_user %>
      <div class="text-center mb-3">
        <%= link_to '編集する', edit_public_review_path(@review.id), class: "button col-md-4 mt-3" %>
        <%= link_to '削除する', public_review_path(@review), method: :delete, "data-confirm" => "本当に削除しますか？" , class: "button-danger col-md-4 ml-2" %>
      </div>
    <% end %>
  </div>
</div>
