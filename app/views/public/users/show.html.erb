<div class="row">
  <div class="col-md-3 mt-4">
    <%= image_tag @user.get_profile_image(200,200), class: "user_item_image" %>
    <%= @user.nick_name %>
    
  </div>
  <div class="col-md-8">
    <h4 class="mt-3">
      <%= @user.nick_name %>のレビュー
    </h4>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% @reviews.each do |review| %>
            <div class="d-flex flex-column flex-md-row align-items-center my-3">
              <%= link_to public_review_path(review.id) do %>
                <%= image_tag review.image, class: "user_item_image" %>
              <% end %>
              <div class="col-md-10">
                <h5>
                  <div>
                    <%= link_to public_review_path(review.id), class: "mr-5" do %>
                      <%= review.item_name %>
                    <% end %>
                    <%= review.genre.name %>
                  </div>
                    <%= review.title %>
                  <div class="text-right">
                    購入価格￥<%= review.purchase_price.to_s(:delimited) %>
                  </div>
                </h5>
              </div>
            </div>
            <div class="border"></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>